#SetEnvIf Host ^dev\.focusfeaturesawards2018\.com HTTP_CI_ENV=development
#SetEnvIf Host ^focusfeaturesawards2018\.com HTTP_CI_ENV=production
#SetEnvIf Host focus-ampas HTTP_CI_ENV=local
#Header always set Access-Control-Allow-Origin *

RewriteEngine On
RewriteBase /

#RewriteCond %{HTTP_HOST} focusfeaturesawards2018.com
#RewriteCond %{SERVER_PORT} 80
#RewriteRule ^(.*)$ https://focusfeaturesawards2018.com%{REQUEST_URI} [R,L]

RewriteCond %{HTTP_HOST} ^www\.(.*)$ [NC]
RewriteRule ^(.*)$ https://%1/$1 [R=301,L]

# if index.php doesn't exist in current dir then
# forward to the parent directory of current REQUEST_URI
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_FILENAME} !-f
RewriteRule . index.php [L]
